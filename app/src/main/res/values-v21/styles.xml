<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/DefaultToolbarStyle</item>
        <item name="android:statusBarColor">@color/white2</item>
        <item name="actionMenuTextColor">@color/dark_sky_blue</item>
        <item name="android:actionMenuTextColor">@color/dark_sky_blue</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Theme.AppCompat.Light">
        <item name="hintTextAppearance">@style/TextNormalStyle.Hint_style</item>
        <item name="android:colorControlNormal">@color/greyish_brown</item>
