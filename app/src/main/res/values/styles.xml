<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/DefaultToolbarStyle</item>
        <item name="actionMenuTextColor">@color/dark_sky_blue</item>
        <item name="android:actionMenuTextColor">@color/dark_sky_blue</item>
    </style>

    <style name="DefaultToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">@color/greyish_brown</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/BaseTextHeader</item>
        <item name="elevation">@dimen/action_bar_elevation</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="BaseTextHeader">
        <item name="android:textSize">@dimen/text_header_size</item>
        <item name="android:textColor">@color/greyish_brown</item>
        <item name="android:lineSpacingExtra">@dimen/line_height</item>
        <item name="fontFamily">@string/font_roboto_regular</item>
    </style>

    <style name="TextNormalStyle">
        <item name="android:textSize">@dimen/text_normal_size</item>
        <item name="android:textColor">@color/greyish_brown</item>
        <item name="android:lineSpacingExtra">@dimen/text_normal_line_height</item>
        <item name="fontFamily">@string/font_roboto_regular</item>
    </style>

    <style name="TextNormalStyle.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextNormalStyle.Hint_style">
        <item name="android:textColor">@color/brownish_grey</item>
        <item name="android:lineSpacingExtra">@dimen/line_height</item>
    </style>

    <style name="ActionMenuStyle" parent="BaseTextHeader">
        <item name="android:textColor">@color/dark_sky_blue</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/TextNormalStyle.Hint_style</item>
        <item name="android:textAppearance">@style/TextNormalStyle</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="TextPassInputLayoutStyle" parent="TextInputLayoutStyle">
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/tangerine</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/TextNormalStyle.White</item>
    </style>

</resources>
